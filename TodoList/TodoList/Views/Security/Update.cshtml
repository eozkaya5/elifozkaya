
@model TodoList.Models.Viewmodels.UpdatePasswordModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="vertical-tab">

    @if (ViewBag.State == null)
    {
        <form amethod="post" asp-action="UpdatePassword" asp-controller="Security">
            <div>
                <h3 class="legend last">Şifreyi Güncelle</h3>

            </div>
            <div asp-validation-summary="All"></div>
            <div class="input">
                <span class="fa fa-key"></span>
                <input type="password" asp-for="Password" placeholder="Şifre" />
                <span asp-validation-for="Password"></span>
            </div>
            <button type="submit" class="btn submit">Güncelle</button>

        </form>
    }
    else
    {
        if (ViewBag.State)
        {
            @:<div class="alert-success">Şifre başarıyla güncellenmiştir.</div>
        }
        else
        {
            @:<div class="alert-success">Şifreyi güncellerken beklenmeyen hatayla karşılaşıldı.</div>
        }
    }
</div>


@model Identity.Models.ViewModel.UpdatePasswordModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" href="~/images/favicon.ico" type="image/ico" />
    <title>Veresiye Defteri | </title>

    <!-- Bootstrap -->
    <link href="~/vendors/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="~/vendors/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <!-- NProgress -->
    <link href="~/vendors/nprogress/nprogress.css" rel="stylesheet">
    <!-- Animate.css -->
    <link href="~/vendors/animate.css/animate.min.css" rel="stylesheet">
    <!-- Custom Theme Style -->
    <link href="~/build/css/custom.min.css" rel="stylesheet">
</head>

<body class="login">

    <div class="login_wrapper">
        <div class="animate form login_form">


            <h3>Şifreyi Güncelle</h3>
            <br />          
                <form asp-controller="Security" asp-action="UpdatePassword" method="post">


                    <div asp-validation-summary="All"></div>
                    <div>
                        <input type="password" asp-for="Password" class="form-control" placeholder="Şifre" />
                        <span asp-validation-for="Password"></span>
                    </div>
                    <br />
                    <div>
                        <button type="submit" class="btn submit">Güncelle</button>
                    </div>
                </form>
    

            <div class="clearfix"></div>
            <br />

            <div>
                <h1><i class="fa fa-paw"></i> Veresiye Defteri!</h1>
                <p>©2020 Tüm hakları Saklıdır.
            </div>
        </div>

    </div>
</body>
</html>
